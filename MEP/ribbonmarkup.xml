      <Ribbon.Tabs>
        <Tab CommandName="Tab_Home">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="Group_Home_Options" Size="Medium"/>
                <Scale Group="Group_Home_Commands" Size="Large"/>
                <Scale Group="Group_Home_Ruleset" Size="Large"/>
                <Scale Group="Group_Home_EntropyGrid" Size="Large"/>
                <Scale Group="Group_Home_LifeGrid" Size="Large"/>
              </ScalingPolicy.IdealSizes>
              <Scale Group="Group_Home_LifeGrid" Size="Medium"/>
              <Scale Group="Group_Home_EntropyGrid" Size="Medium"/>
              <Scale Group="Group_Home_Commands" Size="Medium"/>
              <Scale Group="Group_Home_LifeGrid" Size="Small"/>
              <Scale Group="Group_Home_EntropyGrid" Size="Small"/>
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName="Group_Home_Options" SizeDefinition="Options">
            <CheckBox CommandName="cmdHome_Options_Visualisation"/>
            <CheckBox CommandName="cmdHome_Options_OutputToFile"/>
            <ToggleButton CommandName="cmdHome_Options_Paint"/>
          </Group>
          <Group CommandName="Group_Home_Commands" SizeDefinition="ThreeButtons">
            <ToggleButton CommandName="cmdHome_Commands_Run"/>
            <Button CommandName="cmdHome_Commands_NextStep"/>
            <SplitButton CommandName="cmdHome_Commands_ClearSplitButton">
              <SplitButton.ButtonItem>
                <Button CommandName="cmdHome_Commands_Clear"/>
              </SplitButton.ButtonItem>
              <SplitButton.MenuGroups>
                <MenuGroup CommandName="cmdClearMajorItems"
                           Class="MajorItems">
                  <Button CommandName="cmdHome_Commands_ClearEntropyGrid"/>
                  <Button CommandName="cmdHome_Commands_ClearLifeGrid"/>
                </MenuGroup>
              </SplitButton.MenuGroups>
            </SplitButton>
          </Group>
          <Group CommandName="Group_Home_Commands_Running" SizeDefinition="ThreeButtons" ApplicationModes="1">
            <ToggleButton CommandName="cmdHome_Commands_Stop"/>
            <Button CommandName="cmdHome_Commands_NextStep"/>
            <Button CommandName="cmdHome_Commands_Clear"/>
          </Group>
          <Group CommandName="Group_Home_Ruleset" SizeDefinition="Ruleset">
            <ComboBox CommandName="cmdHome_Ruleset_RandomNumberFunction"
                      IsEditable = "false"/>
            <CheckBox CommandName="cmdHome_Ruleset_PeriodicBoundaryConditions"/>
          </Group>
          <Group CommandName="Group_Home_EntropyGrid" SizeDefinition="EntropyGrid">

            <ComboBox CommandName="cmdHome_EntropyGrid_Initialisation"
                      IsEditable = "false"/>
            <ComboBox CommandName="cmdHome_EntropyGrid_InitialisationVariable1"
                      IsEditable = "true"/>
            <ComboBox CommandName="cmdHome_EntropyGrid_InitialisationVariable2"
                      IsEditable = "true"/>
            <ComboBox CommandName="cmdHome_EntropyGrid_Dissipation"
                      IsEditable = "false"/>
            <Button CommandName="cmdHome_EntropyGrid_Initialise"/>
          </Group>
          <Group CommandName="Group_Home_LifeGrid" SizeDefinition="LifeGrid">
            <ComboBox CommandName="cmdHome_LifeGrid_Population"
                      IsEditable = "true"/>
            <ComboBox CommandName="cmdHome_LifeGrid_ReproductionRate"
                      IsEditable = "true"/>
            <ComboBox CommandName="cmdHome_LifeGrid_DeathRate"
                      IsEditable = "true"/>
            <CheckBox CommandName="cmdHome_LifeGrid_Intelligence"/>
            <CheckBox CommandName="cmdHome_LifeGrid_Bias"/>
            <Button CommandName="cmdHome_LifeGrid_Initialise"/>
          </Group>
        </Tab>
      </Ribbon.Tabs>
      <Ribbon.ContextualTabs>
        <TabGroup CommandName='cmdContextualTabGroup_Paint'>
          <Tab CommandName="Tab_Paint">
            <Tab.ScalingPolicy>
              <ScalingPolicy>
                <ScalingPolicy.IdealSizes>
                  <Scale Group="Group_Paint_Options" Size="Large"/>
                </ScalingPolicy.IdealSizes>
                <Scale Group="Group_Paint_Options" Size="Medium"/>
              </ScalingPolicy>
            </Tab.ScalingPolicy>
            <Group CommandName="Group_Paint_Options" SizeDefinition="PaintOptions">
                <ComboBox CommandName="cmdPaint_Options_Layer"
                          IsEditable = "false"/>
            </Group>
          </Tab>
        </TabGroup>
      </Ribbon.ContextualTabs>
    </Ribbon>
  </Application.Views>

</Application>